<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dayCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2025-11-13"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/expandIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â–¼"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No records"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/averageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average: HR=72 BP=120/80 SpO2=98% RR=16"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/detailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- HR Chart -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart Rate (BPM)"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="4dp" />

            <com.tsinghua.openring.PlotView
                android:id="@+id/dayHrChart"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="@color/dark_gray" />

            <!-- BP Chart -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Pressure (mmHg)"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="4dp" />

            <com.tsinghua.openring.PlotView
                android:id="@+id/dayBpChart"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="4dp"
                android:background="@color/dark_gray" />

            <!-- BP Legend -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal">

                <View
                    android:layout_width="20dp"
                    android:layout_height="3dp"
                    android:background="#E53935"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SYS"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="12dp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="3dp"
                    android:background="#FB8C00"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DIA"
                    android:textSize="10sp"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <!-- SpO2 Chart -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Oxygen (%)"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="4dp" />

            <com.tsinghua.openring.PlotView
                android:id="@+id/daySpo2Chart"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="@color/dark_gray" />

            <!-- RR Chart -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respiration Rate (brpm)"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="4dp" />

            <com.tsinghua.openring.PlotView
                android:id="@+id/dayRrChart"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/dark_gray" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
