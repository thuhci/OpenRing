<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/macAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC Address"
        android:textSize="16sp" />

    <Button
        android:id="@+id/connectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接" />

    <!-- New Start Sampling Button -->
    <Button
        android:id="@+id/toggleSamplingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始采样" />

    <Button
        android:id="@+id/eraseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除历史记录" />
    <!-- 原有代码略 -->
    <Button
        android:id="@+id/setUserBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写入用户信息" />
    <EditText
        android:id="@+id/etUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入用户标识 (15 ASCII)"
        android:maxLength="15"
        android:singleLine="true" />
    <Button
        android:id="@+id/eraseUserBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除用户信息" />
    <!-- 下面还是 tvLog、plotView... -->

    <TextView
        android:id="@+id/tvLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log"
        android:textSize="14sp" />

    <com.tsinghua.sample.PlotView
        android:id="@+id/plotView"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <com.tsinghua.sample.PlotView
        android:id="@+id/plotViewX"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <com.tsinghua.sample.PlotView
        android:id="@+id/plotViewY"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <com.tsinghua.sample.PlotView
        android:id="@+id/plotViewZ"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
</LinearLayout>
