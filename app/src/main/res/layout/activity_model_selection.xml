<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_model_selection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model Architecture Selection"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Heart Rate -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_hr_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Heart Rate (HR)"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_hr"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Systolic Blood Pressure -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_bp_sys_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Systolic BP (SYS)"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_bp_sys"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Diastolic Blood Pressure -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_bp_dia_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Diastolic BP (DIA)"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_bp_dia"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Blood Oxygen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_spo2_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Blood Oxygen (SpO2)"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_spo2"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Respiration Rate -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_rr_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Respiration Rate (RR)"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_rr"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Quick Settings Buttons -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Settings:"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_all_transformer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inception"
            android:layout_marginEnd="5dp" />

        <Button
            android:id="@+id/btn_all_resnet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Transformer"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp" />

        <Button
            android:id="@+id/btn_all_inception"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ResNet"
            android:layout_marginStart="5dp" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm"
            android:layout_marginStart="10dp" />
    </LinearLayout>

</LinearLayout>
